---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<header class="h-20 border w-full flex items-center justify-evenly">
    <h1 class="text-2xl font-bold">{title}</h1>

    {
        (title =='Partidos Hoy') && <a href='/world_cup_2022/partidos' class='p-4 rounded bg-slate-200 shadow-md hover:bg-white'>Todos los partidos</a>
    }
    
</header>
